<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:divider">@color/colorPrimary</item>
    </style>

    <style name="RedButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorContrast</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="GreenButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="CustomEditText" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="RegistrationEditText">
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/registration_edit_text_background</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DrawerMenuButton">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:background">@drawable/drawer_menu_button_selector</item>
    </style>

</resources>
